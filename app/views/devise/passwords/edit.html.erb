<%= render DeviseLayoutComponent.new(title: t("devise.change_your_password"),
                                     links: [:sign_in, :register],
                                     flash:,
                                     resource:,
                                     resource_name:) do %>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <div class="flex flex-col gap-y-8">
      <div class="field">
        <%= f.label :password, t("devise.new_password"), class: "label" %>
        <%= f.password_field :password, class: "input", autocomplete: "new-password", placeholder: t("devise.at_least_n_characters", n: 6) %>
      </div>

      <div class="actions">
        <%= f.hidden_field :reset_password_token %>
        <%= f.submit t("devise.change_it_now"), class: "button" %>
      </div>
    </div>
  <% end %>
<% end %>
