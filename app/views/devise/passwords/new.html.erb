<%= render DeviseLayoutComponent.new(title: t("devise.forgot_your_password_question"),
                                     links: [:sign_in, :register],
                                     flash:,
                                     resource:,
                                     resource_name:) do %>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <div class="flex flex-col gap-y-8">
      <div class="field">
        <%= f.label :email, class: "label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input" %>
      </div>

      <div class="actions">
        <%= f.submit t("devise.reset_my_memory_exclamation"), class: "button" %>
      </div>
    </div>
  <% end %>
<% end %>
