<%= render DeviseLayoutComponent.new(title: t("devise.sign_in"),
                                     links: [:register, :reset_password],
                                     flash:,
                                     resource:,
                                     resource_name:) do %>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="flex flex-col gap-y-8">
      <div class="flex flex-col gap-y-2">
        <div class="field">
          <%= f.label :email, class: "label" %>
          <%= f.email_field :email, class: "input", autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :password, class: "label" %>
          <%= f.password_field :password, class: "input", autocomplete: "current-password" %>
        </div>
      </div>

      <div class="actions">
        <%= f.hidden_field :remember_me, value: "1" %>
        <%= f.submit t("devise.sign_in"), class: "button" %>
      </div>
    </div>
  <% end %>
<% end %>
