<%= render DeviseLayoutComponent.new(title: t("devise.register"),
                                     links: [:sign_in],
                                     flash:,
                                     resource:,
                                     resource_name:) do %>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="flex flex-col gap-y-8">
      <div class="flex flex-col gap-y-2">
        <div class="field">
          <%= f.label :email, class: "label" %>
          <%= f.email_field :email, class: "input", autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :password, class: "label" %>
          <%= f.password_field :password, class: "input", autocomplete: "new-password", placeholder: t("devise.at_least_n_characters", n: 6) %>
        </div>
      </div>

      <div class="actions">
        <%= f.submit t("devise.register_me_already"), class: "button" %>
      </div>
    </div>
  <% end %>
<% end %>
