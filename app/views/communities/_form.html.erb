<%= form_with(model: community) do |f| %>
  <div class="flex flex-col gap-y-8">
    <div class="flex flex-col gap-y-4">
      <div class="field">
        <%= f.label :name, class: "label" %>
        <%= f.text_field :name, class: "input" %>
        <%= render FieldWithErrorComponent.new(f.object, :name) %>
      </div>

      <div class="field">
        <%= f.label :access, class: "label" %>
        <%= f.select :access, Community.accesses.values.map { [Community.human_enum_name(:access, _1), _1] }, {}, class: "input" %>
      </div>
    </div>

    <div class="actions flex flex-col gap-y-4 items-center">
      <% button_text = f.object.new_record? ? t("shared.actions.create") : t("shared.actions.save") %>
      <%= f.submit button_text, class: "button" %>
    </div>
  </div>
<% end %>
